{
  "name": "ic-rust-nextjs",
  "version": "1.0.0",
  "author": "b3hr4d <b3hr4d@live.com>",
  "description": "Internet Computer Rust + NextJS Template",
  "keywords": [
    "nextjs",
    "rust",
    "internet computer",
    "icp",
    "starter",
    "dfinity"
  ],
  "scripts": {
    "install:all": "npm install && npm run wasm:install && npm run candid:install",
    "candid:install": "cargo install candid-extractor",
    "ic-wasm:install": "cargo install ic-wasm",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build",
    "lint:fix": "next lint --fix",
    "dev": "next dev",
    "dfx:start": "dfx start --background --clean",
    "dfx:stop": "dfx stop",
    "dfx:build": "sh ./predeploy.sh && dfx build",
    "predeploy": "sh ./predeploy.sh",
    "deploy": "dfx deploy",
    "generate": "dfx generate"
  },
  "devDependencies": {
    "@types/node": "20.8.6",
    "@types/react": "18.2.28",
    "dotenv": "16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-next": "^13.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@re-actor/core": "^0.0.6",
    "next": "^13.5",
    "react": "^18.2",
    "react-dom": "^18.2"
  }
}